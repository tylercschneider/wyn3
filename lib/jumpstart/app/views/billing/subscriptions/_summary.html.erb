<h4><%= subscription.plan&.name || subscription.name %></h4>
<% unless subscription.plan.nil? %>
  <div class="mb-2 text-lg">
    <%= pay_amount_to_currency(subscription) %> / <%= formatted_plan_interval(subscription.plan) %>
  </div>
  <% if subscription.quantity > 1 || subscription.plan.charge_per_unit? %>
    <div><%= t(".quantity", quantity: subscription.quantity, price: pay_amount_to_currency(subscription.plan), unit: (subscription.plan.unit_label? ? t(".per_unit", unit: subscription.plan.unit_label) : t(".each"))) %></div>
  <% end %>
<% end %>
