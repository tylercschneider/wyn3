<div class="lg:w-1/3 w-full p-8 bg-white border border-gray-200 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-50 m-4 rounded-lg">
  <h4 class="mb-4"><%= plan.name %></h4>

  <div class="mb-4">
    <% if plan.contact_url? %>
      <span class="text-5xl font-bold"><%= t(".contact_us_price") %></span>
    <% else %>
      <span class="text-5xl font-bold"><%= pay_amount_to_currency(plan, strip_insignificant_zeros: true) %></span>
      <span class="text-lg text-gray-500 dark:text-gray-300 font-medium">
        <% if plan.unit_label? %>/ <%= plan.unit_label %><% end %>
          / <%= formatted_plan_interval(plan) %>
      </span>
    <% end %>
  </div>

  <p class="mb-4 text-gray-500 dark:text-gray-300"><%= plan.description %></p>

  <div class="mb-8">
    <% plan.features.each do |plan_feature| %>
      <div class="flex mb-2 text-gray-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="shrink-0 mr-2 text-primary-500 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <div><%= plan_feature %></div>
      </div>
    <% end %>
  </div>

  <%# Yield for custom actions at the bottom %>
  <%= yield %>
</div>
