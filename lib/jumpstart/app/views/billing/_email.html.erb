<h5 class="text-gray-700 dark:text-gray-200 font-semibold my-4 border-b border-gray-200 dark:border-gray-700 pb-2"><%= t(".billing_email") %></h5>

<div class="mb-8 flex gap-8 dark:text-gray-200">
  <%= form_with model: current_account, url: billing_path do |f| %>
    <div class="flex-1">
      <div class="text-gray-700 dark:text-gray-200 mt-2"><%= t ".description" %></div>

      <div class="form-group mt-4 flex items-center gap-2">
        <%= f.email_field :billing_email, class: "form-control mt-0 dark:bg-gray-900 dark:text-gray-200", placeholder: true %>
        <%= f.button t(".save"), class: "btn btn-secondary", data: { disable_with: t(".saving") } %>
      </div>
    </div>
  <% end %>
</div>
