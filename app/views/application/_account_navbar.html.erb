<%# locals: (active_class: "bg-primary text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-50 dark:hover:text-gray-200 dark:hover:bg-gray-700") -%>

<div class="bg-white border border-gray-200 dark:bg-gray-900 dark:border-gray-700 rounded-sm text-sm font-medium">
  <%= nav_link_to t(".profile"), edit_user_registration_path, class: "block no-underline p-3 px-6 rounded-t", active_class: active_class, inactive_class: inactive_class %>
  <%= nav_link_to t(".password"), edit_account_password_path, class: "block no-underline p-3 px-6", active_class: active_class, inactive_class: inactive_class %>
  <% if Devise.omniauth_configs.any? %>
    <%= nav_link_to t(".connected_accounts"), user_connected_accounts_path, class: "block no-underline p-3 px-6", active_class: active_class, inactive_class: inactive_class %>
  <% end %>
  <% if Jumpstart.config.payments_enabled? && !hotwire_native_app? %>
    <%= nav_link_to t(".billing"), billing_path, class: "block no-underline p-3 px-6", active_class: active_class, inactive_class: inactive_class, starts_with: "/billing" %>
  <% end %>
  <%= nav_link_to t(".accounts"), accounts_path, class: "block no-underline p-3 px-6", active_class: active_class, inactive_class: inactive_class, starts_with: "/accounts" if Jumpstart.config.team_accounts? %>
  <%= nav_link_to t(".api_tokens"), api_tokens_path, class: "block no-underline p-3 px-6 rounded-b", active_class: active_class, inactive_class: inactive_class, starts_with: "/api_tokens" %>
  <% if defined? Refer %>
    <%= nav_link_to t(".referrals"), referrals_path, class: "block no-underline p-3 px-6", active_class: active_class, inactive_class: inactive_class, starts_with: "/referrals" %>
  <% end %>
</div>
